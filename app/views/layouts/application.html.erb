<!DOCTYPE html>
<html>
<head>
  <title>WeatherPredictor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href=<%=root_path%>>WeatherPredictor</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav">
        <% if current_page?(root_path) %>
	    	<li class="active"><a href=<%=root_path%>><span class="glyphicon glyphicon-home"></span> Home <span class="sr-only">(current)</span></a></li>
	        <li><a href="<%=locations_url%>.html"><span class="glyphicon glyphicon-globe"></span> Locations</a></li>
        <% elsif current_page?("/weather/locations.html") %>
	        <li><a href=<%=root_path%>><span class="glyphicon glyphicon-home"></span> Home <span class="sr-only">(current)</span></a></li>
	        <li class ="active"><a href="<%=locations_url%>.html"><span class="glyphicon glyphicon-globe"></span> Locations</a></li>
	    <% else %>
	    	<li><a href=<%=root_path%>><span class="glyphicon glyphicon-home"></span> Home <span class="sr-only">(current)</span></a></li>
	        <li><a href="<%=locations_url%>.html"><span class="glyphicon glyphicon-globe"></span> Locations</a></li>
	    <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
