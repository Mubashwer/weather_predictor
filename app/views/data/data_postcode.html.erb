<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title" style="display: inline;">Stations in <%= @postcode %>, VIC</h3>
    <a href="/" class="btn btn-default btn-xs pull-right">Back</a>
  </div>
  <div class="panel-body">
    <% @locations.each do |loc| %>
      <% url = "/weather/data/#{loc.station_id}/#{@date}.html" %>
      <a href=<%= url %> class="btn btn-info btn-block"><strong><%= loc.station_id %>:</strong> <%= loc.name %></a>
    <% end %>
  </div>
</div>